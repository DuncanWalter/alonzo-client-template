{
    "extends": [
        "eslint:recommended",
        "plugin:flowtype/recommended"
    ],
    "env":{
        "browser": true,
        "node": true,
        "es6": true
    },
    "rules": {
        "eqeqeq":"warn",
        "curly":"warn",
        "no-implied-eval":"error",
        "no-eval":"error",
        "no-console":"warn",
        "quotes":["warn", "single"],
        "no-unused-vars":"warn",
        "flowtype/no-types-missing-file-annotation": "off"
    },
    "parserOptions":{
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "parser": "babel-eslint",
    "plugins": [ "flowtype" ],
    "settings": {
        "flowtype": {
            "onlyFilesWithFlowAnnotation": false
        }
    }
}