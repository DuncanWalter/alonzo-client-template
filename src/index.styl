// nib handles a bunch of cross browser issues, etc
@require 'nib'
@require './../node_modules/jeet/styl/index.styl'

@font-face
    font-family: Roboto
    src: url(../static/fonts/roboto-regular.ttf)

@font-face 
    font-family: Chosence
    src: url(../static/fonts/chosence.regular.otf);

// extremely crude global responsives
// most responsive design should be handled on a component basis
@media (min-width: 1200px)
    html  
        font-size: 13pt
    .container  
        span( 0.62, 0.19 )

@media (max-width: 1200px) and (min-width: 700px)
    html
        font-size: 12pt 
    .container
        span( 0.78, 0.11 )

@media (max-width: 700px)
    html 
        font-size: 11pt
    .container 
        span( 0.92, 0.04 )     

html 
    font-family: Roboto, sans-serif

// neutral palette
dark = #212121
light = #fafafa

// color palette
pri = #ef6c00 // light
acc = #ff9d3f // light
alt = #b53d00 // dark
val = #00704b // dark
err = #a30437 // dark

// scales by material guide
small = 1.2rem
body  = 1.4rem
large = 1.6rem
head  = 2.0rem
title = 3.6rem

* { transition: inherit }

// the style for the shadows used by materials
shadow( depth )
    box-shadow: 
        0 0 2px rgba(0,0,0,0.18),
        0 (depth * 0.2px) (depth * 0.4px) (depth * 0.2px) rgba(0,0,0,0.18), 
        0 (depth * 0.3px) (depth * 0.8px) (depth * 0.4px) rgba(0,0,0,0.08);


// ensuring easy font contrast TODO error on weird greyscale
colored( color )
    transition: 0.2s ease
    background-color: color
    if lightness( color ) > 50%
        color: alpha(dark, 0.92)
    else
        color: alpha(light, 0.92)

// emulating google materials
material( depth, color )
    colored( color )
    shadow( depth )

// mouse-over feedback for elements with interactions
interactive( depth, color )
    material( depth, color )
    &:hover
        shadow( depth * 1.4 + 7 )
        if lightness( color ) > 50%
            background-color: tint( color, 3% )
        else
            background-color: shade( color, 3% )

pads( scale )
    padding: (scale * 0.4)

margins( scale )
    margin: (scale * 0.4)

.padded
    pads( body )

.guarded
    margins( body )

.card
    interactive( 7, dark )
    & .header
        colored( pri )
        pads( body )
    & .content
        colored( light )
        pads( body )
    & .focus
        colored( acc )
        pads( body )
    & .contrast
        colored( dark )
        pads( body )
    & .hollow
        pads( body )
    & hr
        height: 3px
        width: 100%
        margin: 0
        border: none

.img, img
    object-fit: contain
    width: 100%
    height: 100%

h1
    font-size: title
    margin: large
    letter-spacing: 0.2rem

p
    margin: (body * 0.3)
    font-size: body

.centered
